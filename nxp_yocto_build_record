cat imx-image-multimedia-imx8mp-lpddr4-evk-20221024140016.rootfs.wic | dd of=/dev/mmcb1k2 bs=1M status=progress conv=fsync

# dd bootloader only
sudo dd if=imx-boot-imx8mp-lpddr4-evk-sd.bin-flash_evk of=/dev/sdb bs=1k seek=33

