/* mickey, es8316 codec, audio-codec = <&codec>; */
sound-es8316 {
    compatible = "fsl,imx-audio-es8316";
    model = "imx-audio-es8316";
    audio-cpu = <&sai3>;
    audio-codec = <&codec>;
    audio-routing = 
        "Ext Spk", "HPOL",
        "Ext Spk", "HPOR";
};


&i2c3 {
    ...
    
